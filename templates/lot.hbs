<h1>{{title}}</h1>

{{#if isEditing}}



  <form>
    <div class="form-group">
      <label for="description">description</label>
      {{textarea value=description id="description" class="form-control" rows="10"}}
    </div>

    <div class="form-group">
      <label for="bidNumber">Title</label>
      {{input value=bidNumber id="bidNumber" class="form-control"}}
    </div>



    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>
{{else}}
  <p>{{body}}</p>

  <button class="btn btn-primary" {{action 'edit'}}>Edit</button>
{{/if}}

{{outlet}}
