<h2> Vanagon Auction </h2>

  <div class="row">

    <div class="col-md-12"

      <form id="lots-form" class="form-inline" role="form">
        <div class="form group">
          {{input id='lot' class="form-control" value=description}}
        </div>

        <div class="form group">
          {{input id='lot' class="form-control" value=bidNumber}}
        </div>
        <button class="btn btn-danger" {{action 'addLot'}}>Add Lot</button>



      </form>

      {{#each}}

      <p>{{#link-to 'lot' this.id}}{{description}} == {{bidNumber}}{{/link-to}}</p>

      {{/each}}
    </div>

    <div>
      {{outlet}}
  </div>
</div>
