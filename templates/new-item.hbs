<h2>New item</h2>

<form>
  <div class="form-group">
    <label for="description">Description:</label>
    {{textarea value=description id="description" class="form-control" rows="5"}}
  </div>

    <div class="form-group">
  <label for="image"></label>
  {{input value=image id="image" class="form-control" placeholder="Image URL"}}
  </div>

  <div class="form-group">
    <label for="bidNumber">Bid Number:</label>
    {{input value=bidNumber id="bidNumber" class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action "save"}}>Save</button>
</form>
