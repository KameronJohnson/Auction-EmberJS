<h2>New Vanagon</h2>

<form>
  <div class="form-group">
    <label for="year"></label>
    {{input value=year id="year" class="form-control" placeholder="Year:"}}
  </div>

  <div class="form-group">
    <label for="type"></label>
    {{input value=type id="type" class="form-control" placeholder="Model:"}}
  </div>

  <div class="form-group">
    <label for="price"></label>
    {{input value=price id="price" class="form-control" placeholder="Est. Starting Price:"}}
  </div>

  <div class="form-group">
    <label for="color"></label>
    {{input value=color id="color" class="form-control" placeholder="Color:"}}
  </div>

  <div class="form-group">
    <label for="miles"></label>
    {{input value=miles id="miles" class="form-control" placeholder="Miles:"}}
  </div>

  <div class="form-group">
    <label for="image"></label>
    {{input value=image id="image" class="form-control" placeholder="Image URL:"}}
  </div>

  <div class="form-group">
    <label for="bidNumber"></label>
    {{input value=bidNumber id="bidNumber" class="form-control" placeholder="Bid Number:"}}
  </div>

  <div class="form-group">
    <label for="info"></label>
    {{textarea value=info id="info" class="form-control" rows="5" placeholder="Backstory:"}}
  </div>

  <button class="btn btn-primary" {{action "save"}}>Save</button>
</form>
